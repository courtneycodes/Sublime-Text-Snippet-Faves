	<content><![CDATA[
<?php
\$my_query = new WP_Query( array( 'post_type' => 'slider', 'showposts' => 10 ) );
while (\$my_query->have_posts()) : \$my_query->the_post();
?>
<h1><?php the_title(); ?></h1>
<?php endwhile; wp_reset_postdata(); ?>
]]></content>
